#!/usr/bin/env ruby
# -*- coding: utf-8 -*-

setup_rb = File.expand_path('../../vendor/bundle/bundler/setup.rb', __FILE__)
if File.exists?(setup_rb)
  require setup_rb
else
  require 'rubygems'
  require 'bundler/setup'
end
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)
require 'dcell'
require 'vnet'
require 'pry'

conf = Vnet::Configurations::Vna.conf

Vnet::NodeApi.set_proxy(conf.node_api_proxy)

Vnet::Initializers::DB.run(conf.db_uri)

DCell.start :registry => {
  :adapter => conf.registry.adapter,
  :host => conf.registry.host,
  :port => conf.registry.port
}

$0 = 'pry'
Pry::CLI.parse_options
